extends layout
block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 Lista de Alunos 
        if lista.length > 0 
            .w3-container
                table(class="w3-table-all")
                    tr 
                        th Número
                        th Nome
                        th Git
                    each a in lista
                        tr
                            td= a.Número
                            td= a.Nome
                            td= a.Git
        else
            div(class="w3-container")
                p Ainda não há alunos resgistados ... 
            footer(class="w3-container w3-teal")
                address Gerado por galuno :: 2020-Novembro, jcr
