extends layout 
block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 Registar Aluno
        .w3-container
            form(action='/alunos', method='POST') 
                table(class="w3-table-all")
                    tr 
                        th 
                            label Número:
                            input(class="w3-input w3-border w3-light-grey", type="text", name="Número")  
                        th 
                            label Nome:
                            input(class="w3-input w3-border w3-light-grey", type="text", name="Nome")    
                        th 
                            label Github:
                            input(class="w3-input w3-border w3-light-grey", type="text", name="Git")  
                        th 
                            label TPCs:
                            br
                            // "- var" para definir variável em pug
                            - var tpcNr = 1
                            while tpcNr < 8
                                label(style="margin-right:5px; font-weight:normal;") TPC #{tpcNr}
                                input(style="margin-right:10px;",type="checkbox", name=`tpc${tpcNr}`)   
                                - tpcNr++
                    tr(style="background-color:#fff;") 
                        td
                            button(class="w3-light-grey" style="margin-right:10px;" type="submit") Registar
                            // &nsbp; = | 
                            button(class="w3-light-grey" type="reset") Limpar Valores


        