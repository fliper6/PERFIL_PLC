extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3 Repositório "#{id}"

      if rep
        each r in rep
          ul
            li(style="padding-bottom:10px") 
                b Classe: 
                | 
                a(href=`/${id}/${r.s.value.split("#")[1]}`) #{r.s.value.split("#")[1]} 
      else 
        div.w3-container
          p Nenhuma classe encontrada sobre o repositório.
