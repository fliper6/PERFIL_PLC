extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal(style="padding:15px; margin-bottom:15px;")
        h3 Utilizador "#{nome}"
      if lista1
        ul
          h4(style="padding-bottom:15px") Dados pessoais:
          each a in lista1
            if a.p.value.split("#")[1] != "type"
              li(style="padding-bottom:15px; margin-left:40px;")
                b #{a.p.value.split("#")[1]} 
                if a.o.value.split("#")[1]
                  |- #{a.o.value.split("#")[1]}
                else 
                  |- #{a.o.value}

          hr(style="margin-right:40px") 
          
          h4(style="padding-bottom:15px") Repositórios:
          if lista2 
            each a in lista2
              li(style="padding-bottom:15px; margin-left:40px;")
                if a.o.value.split("#")[1]
                  | #{a.o.value.split("#")[1]}
                else 
                  | #{a.o.value}    
          else
            p Utilizador ainda não tem repositórios públicos disponíveis.
